<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.calculated.dimanakhrationts.calculated.BasicCalculatorFragment">

    <Button
        android:id="@+id/cancelBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="C"
        app:layout_constraintBottom_toTopOf="@+id/oneBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/leftBracketBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/leftBracketBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="("
        app:layout_constraintBottom_toTopOf="@+id/twoBtn"
        app:layout_constraintLeft_toRightOf="@+id/cancelBtn"
        app:layout_constraintRight_toLeftOf="@+id/rightBracketBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/rightBracketBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text=")"
        app:layout_constraintBottom_toTopOf="@+id/threeBtn"
        app:layout_constraintLeft_toRightOf="@+id/leftBracketBtn"
        app:layout_constraintRight_toLeftOf="@+id/equalBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/equalBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="="
        app:layout_constraintBottom_toTopOf="@+id/plusBtn"
        app:layout_constraintLeft_toRightOf="@+id/rightBracketBtn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/oneBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="1"
        app:layout_constraintBottom_toTopOf="@+id/fourBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/twoBtn"
        app:layout_constraintTop_toBottomOf="@+id/cancelBtn" />

    <Button
        android:id="@+id/twoBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="2"
        app:layout_constraintBottom_toTopOf="@+id/fiveBtn"
        app:layout_constraintLeft_toRightOf="@+id/oneBtn"
        app:layout_constraintRight_toLeftOf="@+id/threeBtn"
        app:layout_constraintTop_toBottomOf="@+id/leftBracketBtn" />

    <Button
        android:id="@+id/threeBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="3"
        app:layout_constraintBottom_toTopOf="@+id/sixBtn"
        app:layout_constraintLeft_toRightOf="@+id/twoBtn"
        app:layout_constraintRight_toLeftOf="@+id/plusBtn"
        app:layout_constraintTop_toBottomOf="@+id/rightBracketBtn" />

    <Button
        android:id="@+id/plusBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="+"
        app:layout_constraintBottom_toTopOf="@+id/minusBtn"
        app:layout_constraintLeft_toRightOf="@+id/threeBtn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/equalBtn" />

    <Button
        android:id="@+id/fourBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="4"
        app:layout_constraintBottom_toTopOf="@+id/sevenBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/fiveBtn"
        app:layout_constraintTop_toBottomOf="@+id/oneBtn" />

    <Button
        android:id="@+id/sevenBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:text="7"
        app:layout_constraintBottom_toTopOf="@+id/zeroBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/eightBtn"
        app:layout_constraintTop_toBottomOf="@+id/fourBtn" />

    <Button
        android:id="@+id/eightBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="8"
        app:layout_constraintBottom_toTopOf="@+id/zeroBtn"
        app:layout_constraintLeft_toRightOf="@+id/sevenBtn"
        app:layout_constraintRight_toLeftOf="@+id/nineBtn"
        app:layout_constraintTop_toBottomOf="@+id/fiveBtn"/>

    <Button
        android:id="@+id/fiveBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="5"
        app:layout_constraintBottom_toTopOf="@+id/eightBtn"
        app:layout_constraintLeft_toRightOf="@+id/fourBtn"
        app:layout_constraintRight_toLeftOf="@+id/sixBtn"
        app:layout_constraintTop_toBottomOf="@+id/twoBtn" />

    <Button
        android:id="@+id/sixBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="6"
        app:layout_constraintBottom_toTopOf="@+id/nineBtn"
        app:layout_constraintLeft_toRightOf="@+id/fiveBtn"
        app:layout_constraintRight_toLeftOf="@+id/minusBtn"
        app:layout_constraintTop_toBottomOf="@+id/threeBtn" />

    <Button
        android:id="@+id/minusBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="-"
        app:layout_constraintBottom_toTopOf="@+id/multiplyBtn"
        app:layout_constraintLeft_toRightOf="@+id/sixBtn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plusBtn" />

    <Button
        android:id="@+id/nineBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="9"
        app:layout_constraintBottom_toTopOf="@+id/pointBtn"
        app:layout_constraintLeft_toRightOf="@+id/eightBtn"
        app:layout_constraintRight_toLeftOf="@+id/multiplyBtn"
        app:layout_constraintTop_toBottomOf="@+id/sixBtn" />

    <Button
        android:id="@+id/multiplyBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="*"
        app:layout_constraintBottom_toTopOf="@+id/divideBtn"
        app:layout_constraintLeft_toRightOf="@+id/nineBtn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/minusBtn" />

    <Button
        android:id="@+id/zeroBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/nineBtn"
        app:layout_constraintTop_toBottomOf="@+id/eightBtn"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginRight="8dp" />

    <Button
        android:id="@+id/pointBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/zeroBtn"
        app:layout_constraintRight_toLeftOf="@+id/divideBtn"
        app:layout_constraintTop_toBottomOf="@+id/nineBtn" />

    <Button
        android:id="@+id/divideBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="/"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/pointBtn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/multiplyBtn" />
</android.support.constraint.ConstraintLayout>
